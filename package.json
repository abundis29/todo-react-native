{
  "name": "secure-todo",
  "version": "1.1.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --all --coverage --changedSince=origin/main",
    "test:watch": "jest -o --watch --coverage=false --detectOpenHandles",
    "setup": "node setup",
    "validate": "npx expo-doctor && npm run lint && npm run test",
    "postinstall": "npm run validate",
    "updateSnapshots": "jest -u --coverage=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run test",
    "format": "npx prettier --write .", 
    "performance": "react-native-performance-monitor"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/native": "^6.1.8",
    "@react-navigation/native-stack": "^6.9.14",
    "@reduxjs/toolkit": "^1.9.7",
    "@testing-library/react-native": "^12.3.0",
    "expo": "^52.0.33",
    "expo-local-authentication": "~15.0.2",
    "expo-splash-screen": "~0.29.21",
    "expo-status-bar": "~2.0.1",
    "jest-expo": "~52.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "0.76.7",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-performance-monitor": "^2.0.0",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "typescript": "^5.3.3",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@react-native-community/cli": "^15.1.3",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^12.0.2",
    "prettier": "^2.8.8",
    "redux-mock-store": "^1.5.4"
  },
  "private": true,
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "react-native-keyboard-aware-scroll-view",
          "redux-persist"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "npx prettier --write"
    ]
  }
}
